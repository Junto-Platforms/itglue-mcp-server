{
  "name": "itglue-mcp-server",
  "version": "1.0.0",
  "description": "Unofficial MCP server for the ITGlue API â€” manage documents, sections, and organizations via the Model Context Protocol",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "itglue-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js --transport http",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/index.ts -- --transport http",
    "docker:build": "docker build -t itglue-mcp-server .",
    "docker:run": "docker run --rm -p 3000:3000 -e ITGLUE_API_KEY itglue-mcp-server",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "itglue",
    "it-glue",
    "documentation",
    "msp",
    "model-context-protocol",
    "ai",
    "llm"
  ],
  "engines": {
    "node": ">=18"
  },
  "author": "Junto-Platforms",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Junto-Platforms/itglue-mcp-server"
  },
  "homepage": "https://github.com/Junto-Platforms/itglue-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/Junto-Platforms/itglue-mcp-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "axios": "^1.7.9",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  }
}
